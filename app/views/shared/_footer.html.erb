<footer class="site-footer">
  <div class="container">
    <div class="row g-4 align-items-start">
      <div class="col-12 col-lg-4">
        <div class="footer-brand d-flex align-items-center mb-3">
          <%= image_tag "logo.png", alt: "CourtSideClub Logo", class: "footer-logo me-2" %>
          <span class="brand-text">CourtSideClub</span>
        </div>
        <p class="text-muted mb-4">Donnons le pouvoir aux fans de basket!</p>

        <h6 class="mb-2">Recevoir les dernières informations</h6>
        <form class="newsletter-form d-flex">
          <input type="email" class="form-control" placeholder="Adresse email" aria-label="Adresse email">
          <button type="button" class="btn btn-primary ms-2">S'inscrire</button>
        </form>
      </div>

      <div class="col-6 col-lg-2">
        <h6 class="footer-title">CourtSideClub.io</h6>
        <ul class="list-unstyled footer-links">
          <li><%= link_to 'Le projet', discover_path %></li>
          <li><%= link_to "L'équipe", root_path %></li>
        </ul>
      </div>

      <div class="col-6 col-lg-2">
        <h6 class="footer-title">Mon compte</h6>
        <ul class="list-unstyled footer-links">
          <li><%= link_to 'Mon profil', user_signed_in? ? edit_user_registration_path : new_user_session_path %></li>
          <li><%= link_to 'Mon vestiaire', dashboard_path %></li>
          <li><%= link_to 'Mes avantages', advantages_path %></li>
        </ul>
      </div>

      <div class="col-6 col-lg-2">
        <h6 class="footer-title">Ressources</h6>
        <ul class="list-unstyled footer-links">
          <li><%= link_to 'Blog', articles_path %></li>
          <li><%= link_to 'Contact', contact_path %></li>
          <li><%= link_to 'FAQ', root_path %></li>
          <li><%= link_to 'Mentions Légales', root_path %></li>
        </ul>
      </div>

      <div class="col-6 col-lg-2">
        <h6 class="footer-title">La société</h6>
        <ul class="list-unstyled footer-links">
          <li><%= link_to 'À propos', root_path %></li>
        </ul>
      </div>
    </div>

    <div class="footer-bottom d-flex flex-column flex-lg-row justify-content-between align-items-center mt-4">
      <div class="text-muted small mb-3 mb-lg-0">
        Copyright © <%= Time.current.year %>. All Rights Reserved
      </div>
      <div class="social-langs d-flex align-items-center gap-3">
        <div class="langs d-flex align-items-center gap-2">
          <span class="flag flag-fr" title="Français"></span>
        </div>
        <div class="social d-flex align-items-center gap-3">
          <a href="https://x.com/courtside_io?lang=fr" aria-label="Twitter" class="social-link" target="_blank" rel="noopener noreferrer"><i class="fab fa-twitter"></i></a>
          <a href="https://www.linkedin.com/company/courtsideclub/?originalSubdomain=fr" aria-label="LinkedIn" class="social-link" target="_blank" rel="noopener noreferrer"><i class="fab fa-linkedin"></i></a>
          <a href="https://www.facebook.com/sharer/sharer.php?u=https://www.courtsideclub.io" aria-label="Facebook" class="social-link" target="_blank" rel="noopener noreferrer"><i class="fab fa-facebook"></i></a>
          <a href="https://www.instagram.com/courtsideclubio/" aria-label="Instagram" class="social-link" target="_blank" rel="noopener noreferrer"><i class="fab fa-instagram"></i></a>
        </div>
      </div>
    </div>
  </div>
</footer>
