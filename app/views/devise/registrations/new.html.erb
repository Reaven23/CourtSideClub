<div class="auth-container">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="auth-card">
          <div class="auth-header">
            <%= link_to root_path, class: "auth-logo-link" do %>
              <% if Rails.env.production? %>
                <%= cl_image_tag "jhvvq9iswazduwtl5kr1", alt: "CourtSideClub Logo", class: "auth-logo" %>
              <% else %>
                <%= image_tag "logo.png", alt: "CourtSideClub Logo", class: "auth-logo" %>
              <% end %>
              <span class="auth-brand-text">CourtSideClub</span>
            <% end %>
            <h2 class="auth-title">Rejoindre CourtSideClub</h2>
            <p class="auth-subtitle">Créez votre compte pour accéder aux avantages membres</p>
          </div>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :first_name,
                              required: true,
                              autofocus: true,
                              label: "Prénom",
                              placeholder: "Votre prénom",
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "given-name",
                                class: "auth-input"
                              }%>
                </div>
                <div class="col-md-6">
                  <%= f.input :last_name,
                              required: true,
                              label: "Nom",
                              placeholder: "Votre nom",
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "family-name",
                                class: "auth-input"
                              }%>
                </div>
              </div>

              <%= f.input :email,
                          required: true,
                          label: "Email",
                          placeholder: "votre@email.com",
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            autocomplete: "email",
                            class: "auth-input"
                          }%>

              <%= f.input :birthdate,
                          required: true,
                          label: "Date de naissance",
                          as: :date,
                          start_year: Date.current.year - 80,
                          end_year: Date.current.year - 13,
                          order: [:day, :month, :year],
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            autocomplete: "bday",
                            class: "auth-input"
                          }%>

              <%= f.input :photo,
                          required: false,
                          label: "Photo de profil",
                          hint: "Format JPG, PNG ou GIF (max 5MB)",
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            class: "auth-input",
                            accept: "image/*"
                          }%>

              <div class="row">
                <div class="col-md-6">
                  <%= f.input :password,
                              required: true,
                              label: "Mot de passe",
                              placeholder: "••••••••",
                              hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "new-password",
                                class: "auth-input"
                              } %>
                </div>
                <div class="col-md-6">
                  <%= f.input :password_confirmation,
                              required: true,
                              label: "Confirmer le mot de passe",
                              placeholder: "••••••••",
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "new-password",
                                class: "auth-input"
                              } %>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Créer mon compte", class: "auth-btn-primary" %>
            </div>
          <% end %>

          <div class="auth-divider">
            <span>ou</span>
          </div>

          <div class="auth-links">
            <p class="auth-signup-text">
              Déjà membre ?
              <%= link_to "Se connecter", new_session_path(resource_name), class: "auth-signup-link" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
