<div class="auth-container">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="auth-card">
          <div class="auth-header">
            <%= link_to root_path, class: "auth-logo-link" do %>
              <%= image_tag "logo.png", alt: "CourtSideClub Logo", class: "auth-logo" %>
              <span class="auth-brand-text">CourtSideClub</span>
            <% end %>
            <h2 class="auth-title"><%= t('devise.registrations.new.title') %></h2>
            <p class="auth-subtitle"><%= t('devise.registrations.new.subtitle') %></p>
          </div>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :first_name,
                              required: true,
                              autofocus: true,
                              label: t('devise.registrations.new.first_name_label'),
                              placeholder: t('devise.registrations.new.first_name_placeholder'),
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "given-name",
                                class: "auth-input"
                              }%>
                </div>
                <div class="col-md-6">
                  <%= f.input :last_name,
                              required: true,
                              label: t('devise.registrations.new.last_name_label'),
                              placeholder: t('devise.registrations.new.last_name_placeholder'),
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "family-name",
                                class: "auth-input"
                              }%>
                </div>
              </div>

              <%= f.input :email,
                          required: true,
                          label: t('devise.registrations.new.email_label'),
                          placeholder: t('devise.registrations.new.email_placeholder'),
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            autocomplete: "email",
                            class: "auth-input"
                          }%>

              <%= f.input :birthdate,
                          required: true,
                          label: t('devise.registrations.new.birthdate_label'),
                          as: :date,
                          start_year: Date.current.year - 80,
                          end_year: Date.current.year - 13,
                          order: [:day, :month, :year],
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            autocomplete: "bday",
                            class: "auth-input"
                          }%>

              <%= f.input :photo,
                          required: false,
                          label: t('devise.registrations.new.photo_label'),
                          hint: t('devise.registrations.new.photo_hint'),
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            class: "auth-input",
                            accept: "image/*"
                          }%>

              <div class="row">
                <div class="col-md-6">
                  <%= f.input :password,
                              required: true,
                              label: t('devise.registrations.new.password_label'),
                              placeholder: t('devise.registrations.new.password_placeholder'),
                              hint: (t('devise.registrations.new.password_hint', count: @minimum_password_length) if @minimum_password_length),
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "new-password",
                                class: "auth-input"
                              } %>
                </div>
                <div class="col-md-6">
                  <%= f.input :password_confirmation,
                              required: true,
                              label: t('devise.registrations.new.password_confirmation_label'),
                              placeholder: t('devise.registrations.new.password_confirmation_placeholder'),
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "new-password",
                                class: "auth-input"
                              } %>
                </div>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t('devise.registrations.new.submit'), class: "auth-btn-primary" %>
            </div>
          <% end %>

          <div class="auth-divider">
            <span><%= t('devise.registrations.new.divider') %></span>
          </div>

          <div class="auth-links">
            <p class="auth-signup-text">
              <%= t('devise.registrations.new.login_text') %>
              <%= link_to t('devise.registrations.new.login_link'), new_session_path(resource_name), class: "auth-signup-link" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
