<div class="auth-container">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="auth-card">
          <div class="auth-header">
            <%= link_to root_path, class: "auth-logo-link" do %>
              <% if Rails.env.production? %>
                <%= cl_image_tag "jhvvq9iswazduwtl5kr1", alt: "CourtSideClub Logo", class: "auth-logo" %>
              <% else %>
                <%= image_tag "logo.png", alt: "CourtSideClub Logo", class: "auth-logo" %>
              <% end %>
              <span class="auth-brand-text">CourtSideClub</span>
            <% end %>
            <h2 class="auth-title">Mon profil</h2>
            <p class="auth-subtitle">Modifiez vos informations personnelles</p>
          </div>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :first_name,
                              required: true,
                              autofocus: true,
                              label: "Prénom",
                              placeholder: "Votre prénom",
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "given-name",
                                class: "auth-input"
                              }%>
                </div>
                <div class="col-md-6">
                  <%= f.input :last_name,
                              required: true,
                              label: "Nom",
                              placeholder: "Votre nom",
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "family-name",
                                class: "auth-input"
                              }%>
                </div>
              </div>

              <%= f.input :email,
                          required: true,
                          label: "Email",
                          placeholder: "votre@email.com",
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            autocomplete: "email",
                            class: "auth-input"
                          }%>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="auth-info-message">
                  <i class="fas fa-clock me-2"></i>
                  En attente de confirmation pour : <strong><%= resource.unconfirmed_email %></strong>
                </div>
              <% end %>

              <%= f.input :birthdate,
                          required: true,
                          label: "Date de naissance",
                          as: :date,
                          start_year: Date.current.year - 80,
                          end_year: Date.current.year - 13,
                          order: [:day, :month, :year],
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            autocomplete: "bday",
                            class: "auth-input"
                          }%>

              <div class="auth-photo-section">
                <h4 class="auth-section-title">
                  <i class="fas fa-camera me-2"></i>
                  Photo de profil
                </h4>
                <p class="auth-section-subtitle">Ajoutez une photo pour personnaliser votre profil</p>

                <% if resource.photo.attached? && resource.persisted? %>
                  <div class="current-photo mb-3">
                    <p class="current-photo-label">Photo actuelle :</p>
                    <% if Rails.env.production? %>
                      <%= cl_image_tag resource.photo.key, class: "current-photo-img", alt: "Photo de profil actuelle", width: 100, height: 100, crop: :fill, gravity: :face %>
                    <% else %>
                      <%= image_tag resource.photo, class: "current-photo-img", alt: "Photo de profil actuelle" %>
                    <% end %>
                  </div>
                <% else %>
                  <div class="current-photo mb-3">
                    <p class="current-photo-label">Aucune photo de profil</p>
                    <div class="no-photo-placeholder">
                      <i class="fas fa-user-circle"></i>
                      <span>Aucune photo</span>
                    </div>
                  </div>
                <% end %>

                <%= f.input :photo,
                            required: false,
                            label: "Changer la photo",
                            hint: "Format JPG, PNG ou GIF (max 5MB). Laissez vide pour conserver l'actuelle.",
                            wrapper_class: "auth-input-wrapper",
                            input_html: {
                              class: "auth-input",
                              accept: "image/*"
                            }%>
              </div>

              <div class="auth-password-section">
                <h4 class="auth-section-title">
                  <i class="fas fa-lock me-2"></i>
                  Changer le mot de passe
                </h4>
                <p class="auth-section-subtitle">Laissez vide si vous ne souhaitez pas le modifier</p>

                <div class="row">
                  <div class="col-md-6">
                    <%= f.input :password,
                                required: false,
                                label: "Nouveau mot de passe",
                                placeholder: "••••••••",
                                hint: "Laissez vide pour ne pas changer",
                                wrapper_class: "auth-input-wrapper",
                                input_html: {
                                  autocomplete: "new-password",
                                  class: "auth-input"
                                } %>
                  </div>
                  <div class="col-md-6">
                    <%= f.input :password_confirmation,
                                required: false,
                                label: "Confirmer le mot de passe",
                                placeholder: "••••••••",
                                wrapper_class: "auth-input-wrapper",
                                input_html: {
                                  autocomplete: "new-password",
                                  class: "auth-input"
                                } %>
                  </div>
                </div>

                <%= f.input :current_password,
                            required: true,
                            label: "Mot de passe actuel",
                            placeholder: "••••••••",
                            hint: "Requis pour confirmer les modifications",
                            wrapper_class: "auth-input-wrapper",
                            input_html: {
                              autocomplete: "current-password",
                              class: "auth-input"
                            } %>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Mettre à jour", class: "auth-btn-primary" %>
            </div>
          <% end %>

          <div class="auth-divider">
            <span>ou</span>
          </div>

          <div class="auth-links">
            <div class="auth-danger-zone">
              <h4 class="auth-danger-title">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Zone de danger
              </h4>
              <p class="auth-danger-text">
                Cette action est irréversible et supprimera définitivement votre compte.
              </p>
              <%= button_to "Supprimer mon compte",
                            registration_path(resource_name),
                            method: :delete,
                            class: "auth-btn-danger",
                            data: {
                              confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.",
                              turbo_confirm: "Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible."
                            } %>
            </div>

            <div class="auth-back-link">
              <%= link_to dashboard_path, class: "auth-back-btn" do %>
                <i class="fas fa-arrow-left me-2"></i>
                Retour au dashboard
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
