<div class="auth-container">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="auth-card">
          <div class="auth-header">
            <%= link_to root_path, class: "auth-logo-link" do %>
              <%= image_tag "logo.png", alt: "CourtSideClub Logo", class: "auth-logo" %>
              <span class="auth-brand-text">CourtSideClub</span>
            <% end %>
            <h2 class="auth-title"><%= t('devise.registrations.edit.title') %></h2>
            <p class="auth-subtitle"><%= t('devise.registrations.edit.subtitle') %></p>
          </div>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "auth-form" }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <div class="row">
                <div class="col-md-6">
                  <%= f.input :first_name,
                              required: true,
                              autofocus: true,
                              label: t('devise.registrations.edit.first_name_label'),
                              placeholder: t('devise.registrations.edit.first_name_placeholder'),
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "given-name",
                                class: "auth-input"
                              }%>
                </div>
                <div class="col-md-6">
                  <%= f.input :last_name,
                              required: true,
                              label: t('devise.registrations.edit.last_name_label'),
                              placeholder: t('devise.registrations.edit.last_name_placeholder'),
                              wrapper_class: "auth-input-wrapper",
                              input_html: {
                                autocomplete: "family-name",
                                class: "auth-input"
                              }%>
                </div>
              </div>

              <%= f.input :email,
                          required: true,
                          label: t('devise.registrations.edit.email_label'),
                          placeholder: t('devise.registrations.edit.email_placeholder'),
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            autocomplete: "email",
                            class: "auth-input"
                          }%>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="auth-info-message">
                  <i class="fas fa-clock me-2"></i>
                  <%= t('devise.registrations.edit.pending_confirmation') %> <strong><%= resource.unconfirmed_email %></strong>
                </div>
              <% end %>

              <%= f.input :birthdate,
                          required: true,
                          label: t('devise.registrations.edit.birthdate_label'),
                          as: :date,
                          start_year: Date.current.year - 80,
                          end_year: Date.current.year - 13,
                          order: [:day, :month, :year],
                          wrapper_class: "auth-input-wrapper",
                          input_html: {
                            autocomplete: "bday",
                            class: "auth-input"
                          }%>

              <div class="auth-photo-section">
                <h4 class="auth-section-title">
                  <i class="fas fa-camera me-2"></i>
                  <%= t('devise.registrations.edit.photo_section.title') %>
                </h4>
                <p class="auth-section-subtitle"><%= t('devise.registrations.edit.photo_section.subtitle') %></p>

                <% if resource.photo.attached? && resource.persisted? %>
                  <div class="current-photo mb-3">
                    <p class="current-photo-label"><%= t('devise.registrations.edit.photo_section.current_photo') %></p>
                    <% if Rails.env.production? %>
                      <%= cl_image_tag resource.photo.key, class: "current-photo-img", alt: t('devise.registrations.edit.photo_section.current_photo_alt'), width: 100, height: 100, crop: :fill, gravity: :face %>
                    <% else %>
                      <%= image_tag resource.photo, class: "current-photo-img", alt: t('devise.registrations.edit.photo_section.current_photo_alt') %>
                    <% end %>
                  </div>
                <% else %>
                  <div class="current-photo mb-3">
                    <p class="current-photo-label"><%= t('devise.registrations.edit.photo_section.no_photo') %></p>
                    <div class="no-photo-placeholder">
                      <i class="fas fa-user-circle"></i>
                      <span><%= t('devise.registrations.edit.photo_section.no_photo_text') %></span>
                    </div>
                  </div>
                <% end %>

                <%= f.input :photo,
                            required: false,
                            label: t('devise.registrations.edit.photo_section.change_label'),
                            hint: t('devise.registrations.edit.photo_section.change_hint'),
                            wrapper_class: "auth-input-wrapper",
                            input_html: {
                              class: "auth-input",
                              accept: "image/*"
                            }%>
              </div>

              <div class="auth-password-section">
                <h4 class="auth-section-title">
                  <i class="fas fa-lock me-2"></i>
                  <%= t('devise.registrations.edit.password_section.title') %>
                </h4>
                <p class="auth-section-subtitle"><%= t('devise.registrations.edit.password_section.subtitle') %></p>

                <div class="row">
                  <div class="col-md-6">
                    <%= f.input :password,
                                required: false,
                                label: t('devise.registrations.edit.password_section.new_password_label'),
                                placeholder: t('devise.registrations.edit.password_section.new_password_placeholder'),
                                hint: t('devise.registrations.edit.password_section.new_password_hint'),
                                wrapper_class: "auth-input-wrapper",
                                input_html: {
                                  autocomplete: "new-password",
                                  class: "auth-input"
                                } %>
                  </div>
                  <div class="col-md-6">
                    <%= f.input :password_confirmation,
                                required: false,
                                label: t('devise.registrations.edit.password_section.password_confirmation_label'),
                                placeholder: t('devise.registrations.edit.password_section.password_confirmation_placeholder'),
                                wrapper_class: "auth-input-wrapper",
                                input_html: {
                                  autocomplete: "new-password",
                                  class: "auth-input"
                                } %>
                  </div>
                </div>

                <%= f.input :current_password,
                            required: true,
                            label: t('devise.registrations.edit.password_section.current_password_label'),
                            placeholder: t('devise.registrations.edit.password_section.current_password_placeholder'),
                            hint: t('devise.registrations.edit.password_section.current_password_hint'),
                            wrapper_class: "auth-input-wrapper",
                            input_html: {
                              autocomplete: "current-password",
                              class: "auth-input"
                            } %>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t('devise.registrations.edit.submit'), class: "auth-btn-primary" %>
            </div>
          <% end %>

          <div class="auth-divider">
            <span><%= t('devise.registrations.edit.divider') %></span>
          </div>

          <div class="auth-links">
            <div class="auth-danger-zone">
              <h4 class="auth-danger-title">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <%= t('devise.registrations.edit.danger_zone.title') %>
              </h4>
              <p class="auth-danger-text">
                <%= t('devise.registrations.edit.danger_zone.text') %>
              </p>
              <%= button_to t('devise.registrations.edit.danger_zone.delete_button'),
                            registration_path(resource_name),
                            method: :delete,
                            class: "auth-btn-danger",
                            data: {
                              confirm: t('devise.registrations.edit.danger_zone.delete_confirm'),
                              turbo_confirm: t('devise.registrations.edit.danger_zone.delete_confirm')
                            } %>
            </div>

            <div class="auth-back-link">
              <%= link_to dashboard_path, class: "auth-back-btn" do %>
                <i class="fas fa-arrow-left me-2"></i>
                <%= t('devise.registrations.edit.back_link') %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
