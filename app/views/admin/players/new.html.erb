<div class="admin-form-container">
  <div class="admin-form-header">
    <h2 class="admin-form-title">
      <i class="fas fa-user-plus me-2"></i>
      Nouveau joueur
    </h2>
    <p class="admin-form-subtitle">Ajouter un nouveau joueur à la base de données</p>
  </div>

  <div class="admin-form-card">
    <%= simple_form_for [:admin, @player], html: { class: "admin-form" } do |f| %>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :first_name,
                      label: "Prénom",
                      required: true,
                      wrapper_class: "admin-input-wrapper",
                      input_html: { class: "admin-input" } %>
        </div>
        <div class="col-md-6">
          <%= f.input :last_name,
                      label: "Nom",
                      required: true,
                      wrapper_class: "admin-input-wrapper",
                      input_html: { class: "admin-input" } %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :tournament_played,
                      label: "Tournois joués",
                      required: true,
                      wrapper_class: "admin-input-wrapper",
                      input_html: { class: "admin-input", type: "number", min: 0 } %>
        </div>
        <div class="col-md-6">
          <%= f.input :photo,
                      label: "Photo du joueur",
                      required: false,
                      hint: "Format JPG, PNG ou GIF (max 5MB)",
                      wrapper_class: "admin-input-wrapper",
                      input_html: { class: "admin-input", accept: "image/*" } %>
        </div>
      </div>

      <div class="admin-form-actions">
        <%= f.submit "Créer le joueur", class: "btn btn-primary admin-btn-primary" %>
        <%= link_to "Annuler", admin_dashboard_path(tab: 'players'), class: "btn btn-outline-secondary admin-btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
