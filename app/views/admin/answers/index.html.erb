<div class="container py-3">
  <h1 class="h5 mb-3">Réponses — <%= @question.content %></h1>
  <div class="mb-3">
    <%= link_to 'Nouvelle réponse', new_admin_quiz_game_question_answer_path(@quiz_game, @question), class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Retour Questions', admin_quiz_game_questions_path(@quiz_game), class: 'btn btn-outline-secondary btn-sm' %>
  </div>
  <div class="list-group">
    <% @answers.each do |a| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <div class="fw-semibold">#<%= a.order %> — <%= a.content %></div>
          <div class="small <%= a.correct? ? 'text-success' : 'text-muted' %>"><%= a.correct? ? 'Correcte' : 'Incorrecte' %></div>
        </div>
        <%= link_to 'Modifier', edit_admin_quiz_game_question_answer_path(@quiz_game, @question, a), class: 'btn btn-outline-primary btn-sm' %>
      </div>
    <% end %>
  </div>
</div>
