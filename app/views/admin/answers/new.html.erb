<div class="container py-3">
  <h1 class="h5 mb-3">Nouvelle réponse — <%= @question.content %></h1>
  <%= form_with model: [ :admin, @quiz_game, @question, @answer ] do |f| %>
    <div class="mb-2">
      <%= f.label :content, 'Contenu' %>
      <%= f.text_area :content, class: 'form-control', required: true, rows: 2 %>
    </div>
    <div class="mb-2">
      <%= f.label :order, 'Ordre' %>
      <%= f.number_field :order, class: 'form-control', required: true, min: 1 %>
    </div>
    <div class="form-check form-switch mb-3">
      <%= f.check_box :correct, class: 'form-check-input', role: 'switch' %>
      <%= f.label :correct, 'Correcte', class: 'form-check-label' %>
    </div>
    <%= f.submit 'Créer', class: 'btn btn-primary' %>
    <%= link_to 'Annuler', admin_quiz_game_question_answers_path(@quiz_game, @question), class: 'btn btn-outline-secondary' %>
  <% end %>
</div>
