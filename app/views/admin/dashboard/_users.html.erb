<div class="card shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="fw-semibold">Utilisateurs</span>
    <span class="text-muted small"><%= users.size %> comptes</span>
  </div>
  <div class="table-responsive">
    <table class="table table-sm align-middle mb-0">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Email</th>
          <th>Points</th>
          <th>Admin</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="admin_users_list">
        <% users.each do |user| %>
          <tr id="user_<%= user.id %>">
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td><span class="badge text-bg-secondary"><%= user.points %></span></td>
            <td>
              <% if user.admin? %>
                <span class="badge text-bg-success">Admin</span>
              <% else %>
                <span class="badge text-bg-light text-dark">Membre</span>
              <% end %>
            </td>
            <td class="text-end">
              <%= button_to 'Basculer Admin', admin_toggle_user_admin_path(user), method: :patch, class: 'btn btn-sm btn-outline-primary', form: { data: { turbo_frame: 'admin_content' } } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
