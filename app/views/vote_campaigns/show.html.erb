<div class="vote-campaign-container">
  <div class="container">
    <!-- Header de la campagne -->
    <div class="row">
      <div class="col-12">
        <div class="campaign-show-header">
          <div class="campaign-breadcrumb">
            <%= link_to vote_campaigns_path, class: "breadcrumb-link" do %>
              <i class="fas fa-arrow-left"></i>
              <%= t('vote_campaigns.show.back_to_votes') %>
            <% end %>
          </div>

          <div class="campaign-info">
            <h1 class="campaign-show-title"><%= @vote_campaign.title %></h1>
            <div class="campaign-meta">
              <span class="campaign-status <%= @vote_campaign.current? ? 'active' : (@vote_campaign.upcoming? ? 'upcoming' : 'past') %>">
                <% if @vote_campaign.current? %>
                  ðŸ”¥ <%= t('vote_campaigns.show.status.active') %>
                <% elsif @vote_campaign.upcoming? %>
                  ðŸŸ¡ <%= t('vote_campaigns.show.status.upcoming') %>
                <% else %>
                  ðŸ”´ <%= t('vote_campaigns.show.status.past') %>
                <% end %>
              </span>
              <span class="campaign-dates">
                <i class="fas fa-calendar"></i>
                <%= t('vote_campaigns.show.dates', start_date: @vote_campaign.start_date.strftime("%d/%m/%Y"), end_date: @vote_campaign.end_date.strftime("%d/%m/%Y")) %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Description -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="campaign-description-card">
          <p class="campaign-description-text"><%= @vote_campaign.description %></p>
        </div>
      </div>
    </div>

    <!-- Joueurs -->
    <div class="row">
      <div class="col-12">
        <h2 class="players-section-title">
          <i class="fas fa-basketball-ball me-2"></i>
          <%= t('vote_campaigns.show.players_available') %>
        </h2>
        <div class="players-grid">
          <% @players.each do |player| %>
            <div class="player-vote-card <%= 'voted' if @user_vote&.player == player %>">
              <div class="player-photo">
                <% if player.photo.attached? && Rails.env.production? %>
                  <%= cl_image_tag player.photo.key, alt: player.full_name, class: "player-image", width: 200, height: 200, crop: :fill, gravity: :face %>
                <% else %>
                  <%= image_tag player.photo_url, alt: player.full_name, class: "player-image" %>
                <% end %>
                <% if @user_vote&.player == player %>
                  <div class="vote-badge">
                    <i class="fas fa-check"></i>
                  </div>
                <% end %>
              </div>

              <div class="player-info">
                <h4 class="player-name"><%= player.full_name %></h4>
                <p class="player-stats">
                  <i class="fas fa-trophy"></i>
                  <%= player.tournament_played %> <%= t('vote_campaigns.show.tournaments') %>
                </p>

                <div class="vote-count">
                  <i class="fas fa-vote-yea"></i>
                  <span><%= @vote_counts[player.id] || 0 %> <%= t('vote_campaigns.show.votes') %></span>
                </div>
              </div>

              <div class="player-actions">
                <% if user_signed_in? && @vote_campaign.current? && !@user_vote %>
                  <%= link_to vote_vote_campaign_path(@vote_campaign, player_id: player.id),
                      class: "btn-vote",
                      data: {
                        confirm: t('vote_campaigns.show.vote_confirm', player_name: player.full_name),
                        turbo_method: :post
                      } do %>
                    <i class="fas fa-hand-point-up"></i>
                    <%= t('vote_campaigns.show.vote_button') %>
                  <% end %>
                <% elsif @user_vote&.player == player %>
                  <span class="vote-confirmed">
                    <i class="fas fa-check-circle"></i>
                    <%= t('vote_campaigns.show.your_choice') %>
                  </span>
                <% elsif @vote_campaign.past? %>
                  <div class="vote-results">
                    <div class="vote-percentage">
                      <%= (@vote_campaign.vote_count > 0 ? ((@vote_counts[player.id] || 0).to_f / @vote_campaign.vote_count * 100).round(1) : 0) %>%
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Statistiques -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="vote-stat-card">
          <div class="stat-icon">
            <i class="fas fa-users"></i>
          </div>
          <div class="stat-content">
            <h3><%= @vote_campaign.players.count %></h3>
            <p><%= t('vote_campaigns.show.stats.players_available') %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="vote-stat-card">
          <div class="stat-icon">
            <i class="fas fa-vote-yea"></i>
          </div>
          <div class="stat-content">
            <h3><%= @vote_campaign.vote_count %></h3>
            <p><%= t('vote_campaigns.show.stats.votes_cast') %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="vote-stat-card">
          <div class="stat-icon">
            <i class="fas fa-clock"></i>
          </div>
          <div class="stat-content">
            <% if @vote_campaign.current? %>
              <h3><%= distance_of_time_in_words(Time.current, @vote_campaign.end_date) %></h3>
              <p><%= t('vote_campaigns.show.stats.time_remaining') %></p>
            <% elsif @vote_campaign.upcoming? %>
              <h3><%= distance_of_time_in_words(Time.current, @vote_campaign.start_date) %></h3>
              <p><%= t('vote_campaigns.show.stats.before_start') %></p>
            <% else %>
              <h3><%= t('vote_campaigns.show.stats.finished') %></h3>
              <p><%= t('vote_campaigns.show.stats.vote_closed') %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Message de vote -->
    <% if user_signed_in? && @user_vote %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="vote-status-card voted">
            <div class="vote-status-icon">
              <i class="fas fa-check-circle"></i>
            </div>
            <div class="vote-status-content">
              <h4><%= t('vote_campaigns.show.messages.thank_you') %></h4>
              <p><%= t('vote_campaigns.show.messages.voted_for', player_name: @user_vote.player.full_name, date: @user_vote.created_at.strftime("%d/%m/%Y Ã  %H:%M")) %></p>
            </div>
          </div>
        </div>
      </div>
    <% elsif user_signed_in? && @vote_campaign.current? %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="vote-status-card active">
            <div class="vote-status-icon">
              <i class="fas fa-hand-point-down"></i>
            </div>
            <div class="vote-status-content">
              <h4><%= t('vote_campaigns.show.messages.vote_for_player') %></h4>
              <p><%= t('vote_campaigns.show.messages.vote_description') %></p>
            </div>
          </div>
        </div>
      </div>
    <% elsif !user_signed_in? && @vote_campaign.current? %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="vote-status-card login-required">
            <div class="vote-status-icon">
              <i class="fas fa-sign-in-alt"></i>
            </div>
            <div class="vote-status-content">
              <h4><%= t('vote_campaigns.show.messages.login_required') %></h4>
              <p><%= t('vote_campaigns.show.messages.login_description') %></p>
              <%= link_to t('vote_campaigns.show.messages.sign_in'), new_user_session_path, class: "auth-btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>


  </div>
</div>
