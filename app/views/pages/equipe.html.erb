<div class="equipe-page">
  <div class="container">
    <!-- Header Section -->
    <section class="equipe-hero-section text-center mb-5">
      <div class="hero-content">
        <h1 class="hero-title"><%= t('pages.equipe.hero.title') %></h1>
        <p class="hero-subtitle">
          <%= t('pages.equipe.hero.subtitle') %>
        </p>
        <p class="hero-description">
          <%= t('pages.equipe.hero.description') %>
        </p>
        <p class="hero-cta">
          <%= t('pages.equipe.hero.cta') %>
        </p>
      </div>
    </section>

    <!-- Team Members Section -->
    <section class="team-members-section">
      <div class="team-grid">
        <!-- Nicolas - Co-founder & CEO -->
        <div class="team-member-card">
          <div class="member-photo">
            <div class="photo-placeholder">
              <i class="fas fa-user-tie"></i>
            </div>
          </div>
          <div class="member-info">
            <h3 class="member-name"><%= t('pages.equipe.members.nicolas.name') %></h3>
            <p class="member-title"><%= t('pages.equipe.members.nicolas.title') %></p>
            <p class="member-description">
              <%= t('pages.equipe.members.nicolas.description') %>
            </p>
            <div class="member-expertise">
              <% t('pages.equipe.members.nicolas.expertise').each do |expertise| %>
                <span class="expertise-tag"><%= expertise %></span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Julien - Chief Basketball Officer -->
        <div class="team-member-card">
          <div class="member-photo">
            <div class="photo-placeholder">
              <i class="fas fa-basketball-ball"></i>
            </div>
          </div>
          <div class="member-info">
            <h3 class="member-name"><%= t('pages.equipe.members.julien.name') %></h3>
            <p class="member-title"><%= t('pages.equipe.members.julien.title') %></p>
            <p class="member-description">
              <%= t('pages.equipe.members.julien.description') %>
            </p>
            <div class="member-expertise">
              <% t('pages.equipe.members.julien.expertise').each do |expertise| %>
                <span class="expertise-tag"><%= expertise %></span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Valentin - Chief Technical Officer -->
        <div class="team-member-card">
          <div class="member-photo">
            <div class="photo-placeholder">
              <i class="fas fa-code"></i>
            </div>
          </div>
          <div class="member-info">
            <h3 class="member-name"><%= t('pages.equipe.members.valentin.name') %></h3>
            <p class="member-title"><%= t('pages.equipe.members.valentin.title') %></p>
            <p class="member-description">
              <%= t('pages.equipe.members.valentin.description') %>
            </p>
            <div class="member-expertise">
              <% t('pages.equipe.members.valentin.expertise').each do |expertise| %>
                <span class="expertise-tag"><%= expertise %></span>
