            </div>
          </div>
        </div>

        <!-- Adrien - Gamification Product Developer -->
        <div class="team-member-card">
          <div class="member-photo">
            <div class="photo-placeholder">
              <i class="fas fa-gamepad"></i>
            </div>
          </div>
          <div class="member-info">
            <h3 class="member-name"><%= t('pages.equipe.members.adrien.name') %></h3>
            <p class="member-title"><%= t('pages.equipe.members.adrien.title') %></p>
            <p class="member-description">
              <%= t('pages.equipe.members.adrien.description') %>
            </p>
            <div class="member-expertise">
              <% t('pages.equipe.members.adrien.expertise').each do |expertise| %>
                <span class="expertise-tag"><%= expertise %></span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </section>



  </div>
</div>
