<% content_for :title, "FAQ - Questions fréquentes" %>
<% content_for :description, "Trouvez les réponses à vos questions sur CourtSideClub. Comment gagner des points, utiliser les récompenses, devenir partenaire et bien plus encore." %>

<div class="faq-page">
  <div class="container">
    <!-- Header -->
    <div class="page-header mb-5">
      <div class="text-center">
        <h1 class="page-title">
          <i class="fas fa-question-circle me-3"></i><%= t('pages.faq.hero.title') %>
        </h1>
        <p class="page-subtitle"><%= t('pages.faq.hero.subtitle') %></p>
      </div>
    </div>

    <!-- Section Utilisateurs -->
    <section id="utilisateurs" class="faq-section mb-5">
      <div class="section-header">
        <h2 class="section-title">
          <i class="fas fa-users me-3"></i><%= t('pages.faq.users_section.title') %>
        </h2>
        <p class="section-subtitle"><%= t('pages.faq.users_section.subtitle') %></p>
      </div>

      <div class="accordion" id="faqUsers">
        <!-- Adhésion et compte -->
        <div class="accordion-item">
          <h3 class="accordion-header" id="heading1">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
              <i class="fas fa-user-plus me-3"></i><%= t('pages.faq.users_section.questions.membership.question') %>
            </button>
          </h3>
          <div id="collapse1" class="accordion-collapse collapse show" aria-labelledby="heading1" data-bs-parent="#faqUsers">
            <div class="accordion-body">
              <p><%= t('pages.faq.users_section.questions.membership.answer.intro') %></p>
              <ul>
                <% t('pages.faq.users_section.questions.membership.answer.steps').each do |step| %>
                  <li><%= step %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h3 class="accordion-header" id="heading2">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
              <i class="fas fa-coins me-3"></i><%= t('pages.faq.users_section.questions.points_system.question') %>
            </button>
          </h3>
          <div id="collapse2" class="accordion-collapse collapse" aria-labelledby="heading2" data-bs-parent="#faqUsers">
            <div class="accordion-body">
              <p><%= t('pages.faq.users_section.questions.points_system.answer.intro') %></p>
              <ul>
                <% t('pages.faq.users_section.questions.points_system.answer.points').each do |point| %>
                  <li><strong><%= point.split(':').first %> :</strong> <%= point.split(':').last.strip %></li>
                <% end %>
              </ul>
              <p><%= t('pages.faq.users_section.questions.points_system.answer.conclusion') %></p>
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h3 class="accordion-header" id="heading3">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
              <i class="fas fa-vote-yea me-3"></i><%= t('pages.faq.users_section.questions.voting.question') %>
            </button>
          </h3>
          <div id="collapse3" class="accordion-collapse collapse" aria-labelledby="heading3" data-bs-parent="#faqUsers">
            <div class="accordion-body">
              <p><%= t('pages.faq.users_section.questions.voting.answer.intro') %></p>
              <ol>
                <% t('pages.faq.users_section.questions.voting.answer.steps').each do |step| %>
                  <li><%= step %></li>
                <% end %>
              </ol>
              <p><strong><%= t('pages.faq.users_section.questions.voting.answer.note') %></strong></p>
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h3 class="accordion-header" id="heading4">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse4" aria-expanded="false" aria-controls="collapse4">
              <i class="fas fa-gamepad me-3"></i><%= t('pages.faq.users_section.questions.minigames.question') %>
            </button>
          </h3>
          <div id="collapse4" class="accordion-collapse collapse" aria-labelledby="heading4" data-bs-parent="#faqUsers">
            <div class="accordion-body">
              <p><%= t('pages.faq.users_section.questions.minigames.answer.intro') %></p>
              <ul>
                <% t('pages.faq.users_section.questions.minigames.answer.games').each do |game| %>
                  <li><strong><%= game.split(':').first %> :</strong> <%= game.split(':').last.strip %></li>
                <% end %>
              </ul>
              <p><%= t('pages.faq.users_section.questions.minigames.answer.conclusion') %></p>
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h3 class="accordion-header" id="heading5">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse5" aria-expanded="false" aria-controls="collapse5">
              <i class="fas fa-gift me-3"></i><%= t('pages.faq.users_section.questions.benefits.question') %>
            </button>
          </h3>
          <div id="collapse5" class="accordion-collapse collapse" aria-labelledby="heading5" data-bs-parent="#faqUsers">
            <div class="accordion-body">
              <p><%= t('pages.faq.users_section.questions.benefits.answer.intro') %></p>
              <ul>
                <% t('pages.faq.users_section.questions.benefits.answer.levels').each do |level| %>
                  <li><strong><%= level.split(':').first %> :</strong> <%= level.split(':').last.strip %></li>
                <% end %>
              </ul>
              <p><%= t('pages.faq.users_section.questions.benefits.answer.link') %></p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Section Partenaires -->
    <section id="partenaires" class="faq-section mb-5">
      <div class="section-header">
        <h2 class="section-title">
          <i class="fas fa-handshake me-3"></i><%= t('pages.faq.partners_section.title') %>
        </h2>
        <p class="section-subtitle"><%= t('pages.faq.partners_section.subtitle') %></p>
      </div>

      <div class="accordion" id="faqPartners">
        <div class="accordion-item">
          <h3 class="accordion-header" id="heading6">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse6" aria-expanded="false" aria-controls="collapse6">
              <i class="fas fa-eye me-3"></i><%= t('pages.faq.partners_section.questions.visibility.question') %>
            </button>
          </h3>
          <div id="collapse6" class="accordion-collapse collapse" aria-labelledby="heading6" data-bs-parent="#faqPartners">
            <div class="accordion-body">
              <p><%= t('pages.faq.partners_section.questions.visibility.answer.intro') %></p>
              <ul>
                <% t('pages.faq.partners_section.questions.visibility.answer.opportunities').each do |opportunity| %>
                  <li><strong><%= opportunity.split(':').first %> :</strong> <%= opportunity.split(':').last.strip %></li>
                <% end %>
              </ul>
              <p><%= t('pages.faq.partners_section.questions.visibility.answer.conclusion') %></p>
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h3 class="accordion-header" id="heading7">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse7" aria-expanded="false" aria-controls="collapse7">
              <i class="fas fa-gamepad me-3"></i><%= t('pages.faq.partners_section.questions.sponsored_quizzes.question') %>
            </button>
          </h3>
          <div id="collapse7" class="accordion-collapse collapse" aria-labelledby="heading7" data-bs-parent="#faqPartners">
            <div class="accordion-body">
              <p><%= t('pages.faq.partners_section.questions.sponsored_quizzes.answer.intro') %></p>
              <ul>
                <% t('pages.faq.partners_section.questions.sponsored_quizzes.answer.features').each do |feature| %>
                  <li><strong><%= feature.split(':').first %> :</strong> <%= feature.split(':').last.strip %></li>
                <% end %>
              </ul>
              <p><%= t('pages.faq.partners_section.questions.sponsored_quizzes.answer.conclusion') %></p>
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h3 class="accordion-header" id="heading8">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse8" aria-expanded="false" aria-controls="collapse8">
              <i class="fas fa-calendar-alt me-3"></i><%= t('pages.faq.partners_section.questions.events.question') %>
            </button>
          </h3>
          <div id="collapse8" class="accordion-collapse collapse" aria-labelledby="heading8" data-bs-parent="#faqPartners">
            <div class="accordion-body">
              <p><%= t('pages.faq.partners_section.questions.events.answer.intro') %></p>
              <ul>
                <% t('pages.faq.partners_section.questions.events.answer.event_types').each do |event_type| %>
                  <li><strong><%= event_type.split(':').first %> :</strong> <%= event_type.split(':').last.strip %></li>
                <% end %>
              </ul>
              <p><%= t('pages.faq.partners_section.questions.events.answer.conclusion') %></p>
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h3 class="accordion-header" id="heading9">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse9" aria-expanded="false" aria-controls="collapse9">
              <i class="fas fa-users me-3"></i><%= t('pages.faq.partners_section.questions.community_value.question') %>
            </button>
          </h3>
          <div id="collapse9" class="accordion-collapse collapse" aria-labelledby="heading9" data-bs-parent="#faqPartners">
            <div class="accordion-body">
              <p><%= t('pages.faq.partners_section.questions.community_value.answer.intro') %></p>
              <ul>
                <% t('pages.faq.partners_section.questions.community_value.answer.values').each do |value| %>
                  <li><strong><%= value.split(':').first %> :</strong> <%= value.split(':').last.strip %></li>
                <% end %>
              </ul>
              <p><%= t('pages.faq.partners_section.questions.community_value.answer.conclusion') %></p>
            </div>
          </div>
        </div>

        <div class="accordion-item">
          <h3 class="accordion-header" id="heading10">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse10" aria-expanded="false" aria-controls="collapse10">
              <i class="fas fa-lightbulb me-3"></i><%= t('pages.faq.partners_section.questions.custom_partnership.question') %>
            </button>
          </h3>
          <div id="collapse10" class="accordion-collapse collapse" aria-labelledby="heading10" data-bs-parent="#faqPartners">
            <div class="accordion-body">
              <p><%= t('pages.faq.partners_section.questions.custom_partnership.answer.intro') %></p>
              <ul>
                <% t('pages.faq.partners_section.questions.custom_partnership.answer.features').each do |feature| %>
                  <li><strong><%= feature.split(':').first %> :</strong> <%= feature.split(':').last.strip %></li>
                <% end %>
              </ul>
              <p><%= t('pages.faq.partners_section.questions.custom_partnership.answer.conclusion') %></p>
            </div>
          </div>
        </div>
      </div>
    </section>


    <!-- Section Contact -->
    <section class="faq-contact-section text-center">
      <div class="contact-card">
        <h3><%= t('pages.faq.contact_section.title') %></h3>
        <p class="text-muted mb-4"><%= t('pages.faq.contact_section.subtitle') %></p>
        <div class="contact-actions">
          <%= link_to contact_path, class: "btn btn-primary btn-lg me-3" do %>
            <i class="fas fa-envelope me-2"></i><%= t('pages.faq.contact_section.contact_button') %>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
