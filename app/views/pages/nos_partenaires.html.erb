<div class="nos-partenaires-page">
  <div class="container">
    <!-- Header Section -->
    <section class="partners-hero-section text-center mb-5">
      <div class="hero-content">
        <h1 class="hero-title">Nos Partenaires</h1>
        <p class="hero-subtitle">Découvrez les entreprises qui nous font confiance et nous accompagnent dans notre mission</p>
      </div>
    </section>

    <!-- Partners Grid Section -->
    <section class="partners-grid-section mb-5">
      <div class="section-header text-center mb-5">
        <h2 class="section-title">Ils nous font confiance</h2>
        <p class="section-subtitle">Une communauté de partenaires engagés pour le basketball français</p>
      </div>

      <div class="partners-grid">
        <!-- Partenaire Premium -->
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-crown"></i>
          </div>
          <h3 class="partner-name">Partenaire Premium</h3>
          <p class="partner-category">Sponsor Principal</p>
          <p class="partner-description">Un partenaire de confiance qui nous accompagne dans notre développement depuis le début.</p>
          <div class="partner-since">
            <span class="badge bg-primary">Depuis 2024</span>
          </div>
        </div>

        <!-- Partenaire Sport -->
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-shoe-prints"></i>
          </div>
          <h3 class="partner-name">Partenaire Sport</h3>
          <p class="partner-category">Équipementier</p>
          <p class="partner-description">Spécialiste de l'équipement sportif qui partage notre passion pour le basketball.</p>
          <div class="partner-since">
            <span class="badge bg-success">Depuis 2024</span>
          </div>
        </div>

        <!-- Partenaire Tech -->
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-mobile-alt"></i>
          </div>
          <h3 class="partner-name">Partenaire Tech</h3>
          <p class="partner-category">Innovation</p>
          <p class="partner-description">Leader technologique qui nous aide à créer des expériences digitales uniques.</p>
          <div class="partner-since">
            <span class="badge bg-info">Depuis 2024</span>
          </div>
        </div>

        <!-- Partenaire Santé -->
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-heart"></i>
          </div>
          <h3 class="partner-name">Partenaire Santé</h3>
          <p class="partner-category">Bien-être</p>
          <p class="partner-description">Expert du bien-être qui accompagne nos membres dans leur santé et leur forme.</p>
          <div class="partner-since">
            <span class="badge bg-warning">Depuis 2024</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Become Partner CTA Section -->
    <section class="become-partner-section text-center">
      <div class="cta-content">
        <h2 class="cta-title">Vous souhaitez devenir partenaire ?</h2>
        <p class="cta-subtitle">Rejoignez notre communauté et bénéficiez de notre expertise dans le basketball français</p>
        <div class="cta-actions">
          <%= link_to partenariat_path, class: "btn btn-primary btn-lg me-3" do %>
            <i class="fas fa-handshake me-2"></i>Devenir partenaire
          <% end %>
          <%= link_to contact_path, class: "btn btn-outline-primary btn-lg" do %>
            <i class="fas fa-envelope me-2"></i>Nous contacter
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
