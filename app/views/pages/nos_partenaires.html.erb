<div class="nos-partenaires-page">
  <div class="container">
    <!-- Header Section -->
    <section class="partners-hero-section text-center mb-5">
      <div class="hero-content">
        <h1 class="hero-title"><%= t('devise.nos_partenaires.hero.title') %></h1>
        <p class="hero-subtitle"><%= t('devise.nos_partenaires.hero.subtitle') %></p>
      </div>
    </section>

    <!-- Partners Grid Section -->
    <section class="partners-grid-section mb-5">
      <div class="section-header text-center mb-5">
        <h2 class="section-title"><%= t('devise.nos_partenaires.grid.title') %></h2>
        <p class="section-subtitle"><%= t('devise.nos_partenaires.grid.subtitle') %></p>
      </div>

      <div class="partners-grid">
        <!-- Partenaire Premium -->
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-crown"></i>
          </div>
          <h3 class="partner-name"><%= t('devise.nos_partenaires.grid.partners.premium.name') %></h3>
          <p class="partner-category"><%= t('devise.nos_partenaires.grid.partners.premium.category') %></p>
          <p class="partner-description"><%= t('devise.nos_partenaires.grid.partners.premium.description') %></p>
          <div class="partner-since">
            <span class="badge bg-primary"><%= t('devise.nos_partenaires.grid.partners.premium.since') %></span>
          </div>
        </div>

        <!-- Partenaire Sport -->
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-shoe-prints"></i>
          </div>
          <h3 class="partner-name"><%= t('devise.nos_partenaires.grid.partners.sport.name') %></h3>
          <p class="partner-category"><%= t('devise.nos_partenaires.grid.partners.sport.category') %></p>
          <p class="partner-description"><%= t('devise.nos_partenaires.grid.partners.sport.description') %></p>
          <div class="partner-since">
            <span class="badge bg-success"><%= t('devise.nos_partenaires.grid.partners.sport.since') %></span>
          </div>
        </div>

        <!-- Partenaire Tech -->
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-mobile-alt"></i>
          </div>
          <h3 class="partner-name"><%= t('devise.nos_partenaires.grid.partners.tech.name') %></h3>
          <p class="partner-category"><%= t('devise.nos_partenaires.grid.partners.tech.category') %></p>
          <p class="partner-description"><%= t('devise.nos_partenaires.grid.partners.tech.description') %></p>
          <div class="partner-since">
            <span class="badge bg-info"><%= t('devise.nos_partenaires.grid.partners.tech.since') %></span>
          </div>
        </div>

        <!-- Partenaire SantÃ© -->
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-heart"></i>
          </div>
          <h3 class="partner-name"><%= t('devise.nos_partenaires.grid.partners.health.name') %></h3>
          <p class="partner-category"><%= t('devise.nos_partenaires.grid.partners.health.category') %></p>
          <p class="partner-description"><%= t('devise.nos_partenaires.grid.partners.health.description') %></p>
          <div class="partner-since">
            <span class="badge bg-warning"><%= t('devise.nos_partenaires.grid.partners.health.since') %></span>
          </div>
        </div>
      </div>
    </section>

    <!-- Become Partner CTA Section -->
    <section class="become-partner-section text-center">
      <div class="cta-content">
        <h2 class="cta-title"><%= t('devise.nos_partenaires.cta.title') %></h2>
        <p class="cta-subtitle"><%= t('devise.nos_partenaires.cta.subtitle') %></p>
        <div class="cta-actions">
          <%= link_to partenariat_path, class: "btn btn-primary btn-lg me-3" do %>
            <i class="fas fa-handshake me-2"></i><%= t('devise.nos_partenaires.cta.become_partner') %>
          <% end %>
          <%= link_to contact_path, class: "btn btn-outline-primary btn-lg" do %>
            <i class="fas fa-envelope me-2"></i><%= t('devise.nos_partenaires.cta.contact_us') %>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
