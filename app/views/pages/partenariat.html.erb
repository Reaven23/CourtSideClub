<% content_for :title, "Devenir Partenaire" %>
<% content_for :description, "Rejoignez CourtSideClub en tant que partenaire et bénéficiez d'une visibilité exceptionnelle auprès de notre communauté de fans de basket. Augmentez votre engagement et votre ROI." %>

<div class="partenariat-page">
  <div class="container">
    <!-- Header -->
    <div class="page-header mb-5">
      <div class="text-center">
        <h1 class="page-title">
          <i class="fas fa-handshake me-3"></i><%= t('pages.partenariat.hero.title') %>
        </h1>
        <p class="page-subtitle"><%= t('pages.partenariat.hero.subtitle') %></p>
      </div>
    </div>

    <!-- Section Avantages du partenariat -->
    <section class="avantages-section mb-5">
      <div class="section-header text-center mb-5">
        <h2 class="section-title"><%= t('pages.partenariat.advantages.title') %></h2>
        <p class="section-subtitle"><%= t('pages.partenariat.advantages.subtitle') %></p>
      </div>

      <div class="row g-4">
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-eye"></i>
            </div>
            <h3><%= t('pages.partenariat.advantages.cards.visibility.title') %></h3>
            <p><%= t('pages.partenariat.advantages.cards.visibility.description') %></p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-gamepad"></i>
            </div>
            <h3><%= t('pages.partenariat.advantages.cards.quizzes.title') %></h3>
            <p><%= t('pages.partenariat.advantages.cards.quizzes.description') %></p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-calendar-alt"></i>
            </div>
            <h3><%= t('pages.partenariat.advantages.cards.events.title') %></h3>
            <p><%= t('pages.partenariat.advantages.cards.events.description') %></p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-users"></i>
            </div>
            <h3><%= t('pages.partenariat.advantages.cards.community.title') %></h3>
            <p><%= t('pages.partenariat.advantages.cards.community.description') %></p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-lightbulb"></i>
            </div>
            <h3><%= t('pages.partenariat.advantages.cards.innovation.title') %></h3>
            <p><%= t('pages.partenariat.advantages.cards.innovation.description') %></p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-palette"></i>
            </div>
            <h3><%= t('pages.partenariat.advantages.cards.customization.title') %></h3>
            <p><%= t('pages.partenariat.advantages.cards.customization.description') %></p>
          </div>
        </div>
      </div>
    </section>

    <!-- Section Comment ça marche -->
    <section class="process-section mb-5">
      <div class="section-header text-center mb-5">
        <h2 class="section-title"><%= t('pages.partenariat.process.title') %></h2>
        <p class="section-subtitle"><%= t('pages.partenariat.process.subtitle') %></p>
      </div>

      <div class="process-timeline">
        <div class="process-step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h3><%= t('pages.partenariat.process.steps.contact.title') %></h3>
            <p><%= t('pages.partenariat.process.steps.contact.description') %></p>
          </div>
        </div>

        <div class="process-step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h3><%= t('pages.partenariat.process.steps.study.title') %></h3>
            <p><%= t('pages.partenariat.process.steps.study.description') %></p>
          </div>
        </div>

        <div class="process-step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h3><%= t('pages.partenariat.process.steps.presentation.title') %></h3>
            <p><%= t('pages.partenariat.process.steps.presentation.description') %></p>
          </div>
        </div>

        <div class="process-step">
          <div class="step-number">4</div>
          <div class="step-content">
            <h3><%= t('pages.partenariat.process.steps.launch.title') %></h3>
            <p><%= t('pages.partenariat.process.steps.launch.description') %></p>
          </div>
        </div>
      </div>
    </section>

    <!-- Section Nos Partenaires -->
    <section class="partners-section mb-5">
      <div class="section-header text-center mb-5">
        <h2 class="section-title"><%= t('pages.partenariat.partners.title') %></h2>
        <p class="section-subtitle"><%= t('pages.partenariat.partners.subtitle') %></p>
      </div>

      <div class="partners-grid">
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-building"></i>
          </div>
          <h3>Partenaire Premium</h3>
          <p class="partner-category">Sponsor Principal</p>
          <p class="partner-description">Un partenaire de confiance qui nous accompagne dans notre développement depuis le début.</p>
        </div>

        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-shoe-prints"></i>
          </div>
          <h3>Partenaire Sport</h3>
          <p class="partner-category">Équipementier</p>
          <p class="partner-description">Spécialiste de l'équipement sportif qui partage notre passion pour le basketball.</p>
        </div>

        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-mobile-alt"></i>
          </div>
          <h3>Partenaire Tech</h3>
          <p class="partner-category">Innovation</p>
          <p class="partner-description">Leader technologique qui nous aide à créer des expériences digitales uniques.</p>
        </div>

        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-heart"></i>
          </div>
          <h3>Partenaire Santé</h3>
          <p class="partner-category">Bien-être</p>
          <p class="partner-description">Expert du bien-être qui accompagne nos membres dans leur santé et leur forme.</p>
        </div>
      </div>

      <div class="partners-cta text-center mt-5">
        <h3><%= t('pages.partenariat.partners.cta.title') %></h3>
        <p class="text-muted"><%= t('pages.partenariat.partners.cta.description') %></p>
      </div>
    </section>

    <!-- Section Formulaire de Contact -->
    <section class="contact-section">
      <div class="contact-container">
        <div class="contact-header text-center mb-4">
          <h2 class="section-title"><%= t('pages.partenariat.contact.title') %></h2>
          <p class="section-subtitle"><%= t('pages.partenariat.contact.subtitle') %></p>
        </div>

        <div class="contact-form-wrapper">
          <%= simple_form_for @notification, url: notifications_path, html: { class: "partnership-form" } do |f| %>
            <%= f.hidden_field :object, value: "partnership" %>

            <div class="row g-3">
              <div class="col-md-6">
                <%= f.input :company,
                    label: t('pages.partenariat.contact.form.company'),
                    input_html: { class: "form-control" },
                    wrapper: false %>
              </div>

              <div class="col-md-6">
                <%= f.input :first_name,
                    label: t('pages.partenariat.contact.form.first_name'),
                    input_html: { class: "form-control" },
                    wrapper: false %>
              </div>
            </div>

            <div class="row g-3">
              <div class="col-md-6">
                <%= f.input :last_name,
                    label: t('pages.partenariat.contact.form.last_name'),
                    input_html: { class: "form-control" },
                    wrapper: false %>
              </div>

              <div class="col-md-6">
                <%= f.input :email,
                    label: t('pages.partenariat.contact.form.email'),
                    input_html: { class: "form-control" },
                    wrapper: false %>
              </div>
            </div>

            <div class="form-group">
              <%= f.input :phone,
                  label: t('pages.partenariat.contact.form.phone'),
                  input_html: { class: "form-control" },
                  wrapper: false %>
            </div>

            <div class="form-group">
              <%= f.input :content,
                  label: t('pages.partenariat.contact.form.content'),
                  input_html: { class: "form-control", rows: 5 },
                  wrapper: false %>
            </div>

            <div class="form-actions text-center">
              <%= f.submit t('pages.partenariat.contact.form.submit'), class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
