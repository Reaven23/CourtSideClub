<% content_for :title, "Devenir Partenaire - CourtSideClub" %>

<div class="partenariat-page">
  <div class="container">
    <!-- Header -->
    <div class="page-header mb-5">
      <div class="text-center">
        <h1 class="page-title">
          <i class="fas fa-handshake me-3"></i>Devenir Partenaire
        </h1>
        <p class="page-subtitle">Rejoignez l'aventure CourtSideClub et valorisez votre marque auprès d'une communauté passionnée</p>
      </div>
    </div>

    <!-- Section Avantages du partenariat -->
    <section class="avantages-section mb-5">
      <div class="section-header text-center mb-5">
        <h2 class="section-title">Pourquoi devenir partenaire de CourtSideClub ?</h2>
        <p class="section-subtitle">Découvrez les opportunités uniques que nous offrons à nos partenaires</p>
      </div>

      <div class="row g-4">
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-eye"></i>
            </div>
            <h3>Visibilité Premium</h3>
            <p>Exposez votre marque auprès d'une communauté engagée de passionnés de basketball et d'innovation sportive.</p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-gamepad"></i>
            </div>
            <h3>Quiz Sponsorisés</h3>
            <p>Créez des quiz personnalisés qui redirigent vers vos activités et engagent notre communauté de manière ludique.</p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-calendar-alt"></i>
            </div>
            <h3>Événements Exclusifs</h3>
            <p>Organisez des événements uniques avec notre communauté et créez des liens authentiques avec votre audience.</p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-users"></i>
            </div>
            <h3>Communauté Engagée</h3>
            <p>Accédez à une audience de 18-45 ans, urbaine, connectée et passionnée par le sport et l'innovation.</p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-lightbulb"></i>
            </div>
            <h3>Innovation Continue</h3>
            <p>Testez de nouvelles approches marketing et restez à la pointe de l'innovation dans le sport business.</p>
          </div>
        </div>

        <div class="col-lg-4 col-md-6 mb-4">
          <div class="avantage-card">
            <div class="avantage-icon">
              <i class="fas fa-palette"></i>
            </div>
            <h3>Personnalisation Sur Mesure</h3>
            <p>Chaque partenariat est unique et adapté à vos objectifs spécifiques, avec un accompagnement personnalisé.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Section Comment ça marche -->
    <section class="process-section mb-5">
      <div class="section-header text-center mb-5">
        <h2 class="section-title">Comment ça marche ?</h2>
        <p class="section-subtitle">Un processus simple et personnalisé pour créer un partenariat sur mesure</p>
      </div>

      <div class="process-timeline">
        <div class="process-step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h3>Contact Initial</h3>
            <p>Envoyez-nous un message via le formulaire ci-dessous pour nous présenter votre projet et vos objectifs.</p>
          </div>
        </div>

        <div class="process-step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h3>Étude Personnalisée</h3>
            <p>Nous analysons vos besoins et créons une proposition sur mesure qui combine plusieurs leviers d'engagement.</p>
          </div>
        </div>

        <div class="process-step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h3>Réunion de Présentation</h3>
            <p>Nous vous présentons notre proposition et discutons ensemble des modalités du partenariat.</p>
          </div>
        </div>

        <div class="process-step">
          <div class="step-number">4</div>
          <div class="step-content">
            <h3>Lancement & Suivi</h3>
            <p>Mise en place du partenariat avec un accompagnement personnalisé et un suivi des performances.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Section Nos Partenaires -->
    <section class="partners-section mb-5">
      <div class="section-header text-center mb-5">
        <h2 class="section-title">Ils nous font confiance</h2>
        <p class="section-subtitle">Découvrez les partenaires qui ont rejoint l'aventure CourtSideClub</p>
      </div>

      <div class="partners-grid">
        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-building"></i>
          </div>
          <h3>Partenaire Premium</h3>
          <p class="partner-category">Sponsor Principal</p>
          <p class="partner-description">Un partenaire de confiance qui nous accompagne dans notre développement depuis le début.</p>
        </div>

        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-shoe-prints"></i>
          </div>
          <h3>Partenaire Sport</h3>
          <p class="partner-category">Équipementier</p>
          <p class="partner-description">Spécialiste de l'équipement sportif qui partage notre passion pour le basketball.</p>
        </div>

        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-mobile-alt"></i>
          </div>
          <h3>Partenaire Tech</h3>
          <p class="partner-category">Innovation</p>
          <p class="partner-description">Leader technologique qui nous aide à créer des expériences digitales uniques.</p>
        </div>

        <div class="partner-card">
          <div class="partner-logo">
            <i class="fas fa-heart"></i>
          </div>
          <h3>Partenaire Santé</h3>
          <p class="partner-category">Bien-être</p>
          <p class="partner-description">Expert du bien-être qui accompagne nos membres dans leur santé et leur forme.</p>
        </div>
      </div>

      <div class="partners-cta text-center mt-5">
        <h3>Rejoignez cette liste prestigieuse !</h3>
        <p class="text-muted">Devenez le prochain partenaire à nous faire confiance</p>
      </div>
    </section>

    <!-- Section Formulaire de Contact -->
    <section class="contact-section">
      <div class="contact-container">
        <div class="contact-header text-center mb-4">
          <h2 class="section-title">Intéressé par un partenariat ?</h2>
          <p class="section-subtitle">Contactez-nous pour discuter de vos projets et découvrir nos opportunités</p>
        </div>

        <div class="contact-form-wrapper">
          <%= simple_form_for @notification, url: notifications_path, html: { class: "partnership-form" } do |f| %>
            <%= f.hidden_field :object, value: "partnership" %>

            <div class="row g-3">
              <div class="col-md-6">
                <%= f.input :company,
                    label: "Nom de votre entreprise",
                    input_html: { class: "form-control" },
                    wrapper: false %>
              </div>

              <div class="col-md-6">
                <%= f.input :first_name,
                    label: "Prénom du contact",
                    input_html: { class: "form-control" },
                    wrapper: false %>
              </div>
            </div>

            <div class="row g-3">
              <div class="col-md-6">
                <%= f.input :last_name,
                    label: "Nom du contact",
                    input_html: { class: "form-control" },
                    wrapper: false %>
              </div>

              <div class="col-md-6">
                <%= f.input :email,
                    label: "Email professionnel",
                    input_html: { class: "form-control" },
                    wrapper: false %>
              </div>
            </div>

            <div class="form-group">
              <%= f.input :phone,
                  label: "Téléphone (optionnel)",
                  input_html: { class: "form-control" },
                  wrapper: false %>
            </div>

            <div class="form-group">
              <%= f.input :content,
                  label: "Décrivez votre projet et vos objectifs",
                  input_html: { class: "form-control", rows: 5 },
                  wrapper: false %>
            </div>

            <div class="form-actions text-center">
              <%= f.submit "Envoyer ma demande de partenariat", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>
