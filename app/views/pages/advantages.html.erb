<!-- Progression personnalisée Section -->
<section class="progression-section">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="section-title"><%= t('pages.advantages.progression.title') %> <span class="hero-title-highlight"><%= t('pages.advantages.progression.subtitle') %></span></h2>
        <p class="section-subtitle"><%= t('pages.advantages.progression.description') %></p>
      </div>
    </div>

    <div class="progression-content mt-5">
      <div class="row g-4">
        <div class="col-lg-6">
          <div class="progression-card">
            <h3><%= t('pages.advantages.progression.personal_stats.title') %></h3>
            <ul class="progression-list">
              <% t('pages.advantages.progression.personal_stats.items').each do |item| %>
                <li><%= item %></li>
              <% end %>
            </ul>
          </div>
        </div>

        <div class="col-lg-6">
          <div class="progression-card">
            <h3><%= t('pages.advantages.progression.objectives.title') %></h3>
            <ul class="progression-list">
              <% t('pages.advantages.progression.objectives.items').each do |item| %>
                <li><%= item %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>

      <div class="progression-cta text-center mt-5">
        <h4><%= t('pages.advantages.progression.cta.title') %></h4>
        <p><%= t('pages.advantages.progression.cta.description') %></p>
        <div class="cta-buttons">
          <% if user_signed_in? %>
            <%= link_to t('pages.advantages.progression.cta.dashboard'), dashboard_path, class: "button-hero-link" %>
          <% else %>
            <%= link_to t('pages.advantages.progression.cta.join'), new_user_registration_path, class: "button-hero-link" %>
            <%= link_to t('pages.advantages.progression.cta.login'), new_user_session_path, class: "button-hero-link-secondary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
